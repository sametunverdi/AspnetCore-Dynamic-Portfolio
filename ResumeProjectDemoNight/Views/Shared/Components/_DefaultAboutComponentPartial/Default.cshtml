@model ResumeProjectDemoNight.Entities.About
<section id="about">

    <div class="container">

        <!-- section title -->
        <h2 class="section-title wow fadeInUp">Hakkımda</h2>

        <div class="spacer" data-height="60"></div>

        <div class="row">

            <div class="col-md-3">
                <div class="text-center text-md-left">
                    <!-- avatar image -->
                    <img src="@Model.ImageUrl" alt="Samet" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover;" />
                </div>
                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
            </div>

            <div class="col-md-9 triangle-left-md triangle-top-sm">
                <div class="rounded bg-white shadow-dark padding-30">
                    <div class="row">
                        <div class="col-md-6">
                            <!-- about text -->
                            <p>@Model.Description</p>
                            <div class="mt-3">
                                <a href="/sametunverdi.pdf" class="btn btn-default">CV İndir</a>
                            </div>
                            <div class="spacer d-md-none d-lg-none" data-height="30"></div>
                        </div>
                        <div class="col-md-6">
                            @{
                                var colors = new string[] { "#FFD15C", "#FF4C60", "#6C6CE5", "#44D7B6" };
                                int i = 0;
                            }

                            @if (ViewBag.skillList != null)
                            {
                                @foreach (var item in ViewBag.skillList)
                                {
                                    var currentColor = colors[i++ % colors.Length];

                                    <div class="skill-item">
                                        <div class="skill-info clearfix">
                                            <h4 class="float-left mb-3 mt-0">@item.Title</h4>
                                            <span class="float-right">@item.Value%</span>
                                        </div>
                                        <div class="progress">
                                            <div class="progress-bar data-background" role="progressbar"
                                                 aria-valuemin="0" aria-valuemax="100"
                                                 aria-valuenow="@item.Value"
                                                 data-color="@currentColor"
                                                 style="width: @item.Value%; background-color: @currentColor;">
                                            </div>
                                        </div>
                                        <div class="spacer" data-height="20"></div>
                                    </div>
                                }
                            }


                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- row end -->

        <div class="spacer" data-height="70"></div>

        <div class="row">

            <div class="col-md-3 col-sm-6">
                <div class="fact-item">
                    <span class="icon icon-fire"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">@ViewBag.ProjectCount</em></h3>
                        <p class="mb-0">Tamamlanan Projeler</p>
                    </div>
                </div>
                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="fact-item">
                    <span class="icon icon-pencil"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">@ViewBag.SkillCount</em></h3>
                        <p class="mb-0">Teknik Yetenekler</p>
                    </div>
                </div>
                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="fact-item">
                    <span class="icon icon-people"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">@ViewBag.TestimonialCount</em></h3>
                        <p class="mb-0">Mutlu Müşteriler</p>
                    </div>
                </div>
                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="fact-item">
                    <span class="icon icon-badge"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">@ViewBag.ServiceCount</em></h3>
                        <p class="mb-0">Hizmet Çeşitliliği</p>
                    </div>
                </div>
            </div>

        </div>

    </div>

</section>