@model List<ResumeProjectDemoNight.Entities.Service>
<section id="services">

    <div class="container">

        <!-- section title -->
        <h2 class="section-title wow fadeInUp">Hizmetlerim</h2>

        <div class="spacer" data-height="60"></div>

        <div class="row">
            @{
                var colors = new string[] { "#2ECA50", "#FF4C60", "#6C6CE5" };
                int i = 0; // Sayacımız 0'dan başlıyor
            }

            @foreach (var item in Model)
            {
                var currentColor = colors[i++ % colors.Length];
                <div class="col-md-4">
                    <div class="service-box rounded data-background padding-30 text-center text-light shadow-blue"
                         data-color="@currentColor"
                         style="background-color: @currentColor;
                        box-shadow: 0px 5px 20px 0px rgba(0,0,0,0.1);
                        min-height: 350px;
                        display: flex;
                        flex-direction: column;
                        justify-content: center;">

                        <img src="@item.ImageUrl" alt="@item.Title" style="width: 140px; margin-bottom: 20px; align-self: center;" />

                        <h3 class="mb-3 mt-0">@item.Title</h3>
                        <p class="mb-0">@item.Description</p>
                    </div>

                    <div class="spacer d-md-none d-lg-none" data-height="30"></div>
                </div>
            }


        </div>

        <div class="mt-5 text-center">
            <p class="mb-0">Bir projeniz mi var? <a href="#contact">Buradan</a>  bana yazın! 👋</p>
        </div>

    </div>

</section>