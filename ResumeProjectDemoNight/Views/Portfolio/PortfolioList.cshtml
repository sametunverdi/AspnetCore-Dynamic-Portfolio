@using ResumeProjectDemoNight.Entities
@model List<Portfolio>

@{
    ViewData["Title"] = "Projelerim";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">

    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Projelerim</h2>
            <p class="text-slate-400 text-sm mt-1">Web sitenizde sergilenen projeleri buradan yönetebilirsiniz.</p>
        </div>

        <a href="/Portfolio/CreatePortfolio/" class="group flex items-center gap-2 bg-primary hover:bg-blue-600 text-white px-5 py-2.5 rounded-xl transition-all duration-200 shadow-lg shadow-primary/20 hover:shadow-primary/40">
            <span class="material-symbols-outlined text-[20px] group-hover:rotate-90 transition-transform">add_circle</span>
            <span class="font-medium">Yeni Proje Ekle</span>
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">

        @foreach (var item in Model)
        {
            <div class="group bg-card-dark rounded-2xl border border-slate-800 p-6 relative overflow-hidden hover:border-primary/50 transition-all duration-300 shadow-lg hover:shadow-primary/10 hover:-translate-y-1">

                <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-primary/10 to-transparent rounded-bl-full -mr-4 -mt-4 transition-all group-hover:from-primary/20"></div>

                <div class="flex justify-between items-start mb-6 relative z-10">
                    <div class="w-14 h-14 rounded-xl bg-slate-800 border border-slate-700 flex items-center justify-center text-primary shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <span class="material-symbols-outlined text-3xl">terminal</span>
                    </div>

                    @if (item.Status)
                    {
                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-bold bg-green-500/10 text-green-400 border border-green-500/20">
                            <span class="w-1.5 h-1.5 rounded-full bg-green-400 animate-pulse"></span>
                            Yayında
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-bold bg-slate-700/50 text-slate-400 border border-slate-600">
                            <span class="w-1.5 h-1.5 rounded-full bg-slate-500"></span>
                            Pasif
                        </span>
                    }
                </div>

                <div class="mb-6 relative z-10">
                    <h3 class="text-xl font-bold text-white mb-1 line-clamp-1" title="@item.ProjectTitle">
                        @item.ProjectTitle
                    </h3>
                    <p class="text-slate-500 text-xs font-mono">Project ID: #@item.PortfolioId</p>
                </div>

                <div class="flex items-center gap-3 pt-4 border-t border-slate-800 relative z-10">

                    <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="flex-1 bg-slate-800 hover:bg-primary hover:text-white text-slate-300 py-2.5 rounded-lg text-sm font-medium transition-colors flex items-center justify-center gap-2 group/btn">
                        <span class="material-symbols-outlined text-[18px]">edit_square</span>
                        Düzenle
                    </a>

                    <a href="/Portfolio/DeletePortfolio/@item.PortfolioId"
                       onclick="return confirm('Bu projeyi silmek istediğinize emin misiniz?');"
                       class="w-12 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-red-500/10 hover:text-red-500 hover:border-red-500/50 border border-transparent transition-all"
                       title="Sil">
                        <span class="material-symbols-outlined text-[20px]">delete</span>
                    </a>
                </div>

            </div>
        }

    </div>

    @if (Model.Count == 0)
    {
        <div class="flex flex-col items-center justify-center py-20 border-2 border-dashed border-slate-800 rounded-3xl bg-slate-900/50 mt-6">
            <div class="bg-slate-800 w-20 h-20 rounded-full flex items-center justify-center mb-4">
                <span class="material-symbols-outlined text-4xl text-slate-600">layers_clear</span>
            </div>
            <h3 class="text-xl font-bold text-white">Henüz Proje Eklenmemiş</h3>
            <p class="text-slate-500 text-sm mt-2 mb-6">Portfolyonuzu zenginleştirmek için ilk projenizi ekleyin.</p>
            <a href="/Portfolio/CreatePortfolio/" class="text-primary hover:text-white font-medium text-sm transition-colors">
                + Proje Oluştur
            </a>
        </div>
    }

</div>