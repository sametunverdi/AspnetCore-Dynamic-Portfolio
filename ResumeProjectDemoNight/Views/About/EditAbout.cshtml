@using ResumeProjectDemoNight.Entities
@model About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">

    <div class="mb-8">
        <h2 class="text-2xl font-bold text-white">Hakkımda Düzenle</h2>
        <p class="text-slate-400 text-sm mt-1">Biyografinizi ve kişisel bilgilerinizi güncelleyebilir, yeni fotoğraf yükleyebilirsiniz.</p>
    </div>

    <form method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="AboutId" />
        <input type="hidden" asp-for="ImageUrl" />

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <div class="lg:col-span-2 space-y-6">

                <div class="bg-card-dark p-6 rounded-2xl border border-slate-800 shadow-lg space-y-5">

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Ad Soyad (NameSurname)</label>
                        <input type="text" asp-for="NameSurname" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl p-3 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Fotoğraf Yükle</label>
                        <div class="relative">
                            <input type="file" name="picture" class="w-full bg-slate-800 border border-slate-700 text-slate-300 rounded-xl p-3 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-white hover:file:bg-blue-600 cursor-pointer transition-all" />
                        </div>
                        <p class="text-xs text-slate-500 mt-2">* Yeni fotoğraf seçmezseniz eskisi korunur.</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Açıklama (Description)</label>
                        <textarea asp-for="Description" rows="8" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl p-3 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all custom-scrollbar placeholder:text-slate-600 leading-relaxed"></textarea>
                    </div>

                </div>

                <div class="flex items-center gap-4">
                    <button type="submit" class="bg-primary hover:bg-blue-600 text-white px-8 py-3 rounded-xl font-medium transition-all shadow-lg shadow-primary/25 hover:shadow-primary/40 flex items-center gap-2">
                        <span class="material-symbols-outlined">save</span>
                        Güncelle
                    </button>

                    <a href="/About/AboutList/" class="text-slate-400 hover:text-white px-4 py-2 transition-colors">
                        İptal
                    </a>
                </div>

            </div>

            <div class="lg:col-span-1">
                <div class="bg-card-dark p-6 rounded-2xl border border-slate-800 sticky top-24 text-center">
                    <h3 class="text-white font-bold mb-6 border-b border-slate-800 pb-4">Mevcut Görünüm</h3>

                    <div class="relative inline-block mb-6">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="w-40 h-40 rounded-2xl object-cover border-4 border-slate-700 shadow-2xl rotate-2" />
                        }
                        else
                        {
                            <div class="w-40 h-40 rounded-2xl bg-slate-800 flex items-center justify-center border-4 border-slate-700 rotate-2">
                                <span class="material-symbols-outlined text-5xl text-slate-500">person</span>
                            </div>
                        }
                    </div>

                    <h4 class="text-xl font-bold text-white mb-2">@Model.NameSurname</h4>

                    <div class="bg-slate-800/50 p-4 rounded-xl border border-slate-800 text-left">
                        <p class="text-slate-400 text-xs italic line-clamp-6 leading-relaxed">
                            "@Model.Description"
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

