@using ResumeProjectDemoNight.Entities
@model  List<About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">

    <div class="mb-6">
        <h2 class="text-2xl font-bold text-white">Hakkımda (About)</h2>
        <p class="text-slate-400 text-sm mt-1">Kendinizle ilgili detaylı bilgileri ve açıklama metnini buradan yönetebilirsiniz.</p>
    </div>

    <div class="flex flex-col gap-6">

        @foreach (var item in Model)
        {
            <div class="bg-card-dark rounded-2xl border border-slate-800 p-8 shadow-xl relative overflow-hidden group">

                <div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-full blur-3xl -mr-10 -mt-10"></div>

                <div class="flex flex-col md:flex-row gap-8 items-start">

                    <div class="shrink-0 relative mx-auto md:mx-0">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="w-40 h-40 rounded-2xl object-cover border-4 border-slate-700/50 shadow-2xl rotate-3 group-hover:rotate-0 transition-transform duration-500" />
                        }
                        else
                        {
                            <div class="w-40 h-40 rounded-2xl bg-slate-800 flex items-center justify-center border-4 border-slate-700 text-slate-500">
                                <span class="material-symbols-outlined text-5xl">person</span>
                            </div>
                        }
                    </div>

                    <div class="flex-1 space-y-4 text-center md:text-left">
                        <div>
                            <h3 class="text-3xl font-bold text-white mb-2">@item.NameSurname</h3>
                            <div class="h-1 w-20 bg-primary rounded-full mx-auto md:mx-0"></div>
                        </div>

                        <div class="bg-slate-800/30 p-4 rounded-xl border border-slate-800/50">
                            <p class="text-slate-300 leading-relaxed text-sm">
                                @item.Description
                            </p>
                        </div>
                    </div>

                    <div class="self-center md:self-start">
                        <a href="/About/EditAbout/@item.AboutId"
                           class="flex items-center gap-2 bg-slate-800 hover:bg-primary text-white px-6 py-3 rounded-xl transition-all border border-slate-700 hover:border-primary shadow-lg">
                            <span class="material-symbols-outlined text-[20px]">edit_note</span>
                            <span class="font-medium">Düzenle</span>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

