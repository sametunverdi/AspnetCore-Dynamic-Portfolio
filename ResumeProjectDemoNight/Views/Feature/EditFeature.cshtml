@using ResumeProjectDemoNight.Entities
@model Feature
@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-white">Profili Düzenle</h2>
        <p class="text-slate-400 text-sm mt-1">Bilgileri güncelleyebilir ve yeni fotoğraf yükleyebilirsiniz.</p>
    </div>

    <form method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="FeatureId" />
        <input type="hidden" asp-for="ImageUrl" />

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <div class="lg:col-span-2 space-y-6">
                <div class="bg-card-dark p-6 rounded-2xl border border-slate-800 shadow-lg space-y-5">

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Başlık / Unvan (Header)</label>
                        <input type="text" asp-for="Header" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl p-3 focus:border-primary outline-none" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Ad Soyad (Name)</label>
                        <input type="text" asp-for="Name" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl p-3 focus:border-primary outline-none" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Yeni Resim Yükle</label>
                        <div class="relative">
                            <input type="file" name="picture" class="w-full bg-slate-800 border border-slate-700 text-slate-300 rounded-xl p-3 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-white hover:file:bg-blue-600 cursor-pointer" />
                        </div>
                        <p class="text-xs text-slate-500 mt-2">* Yeni resim seçmezseniz eskisi kalır.</p>
                    </div>

                </div>

                <div class="flex items-center gap-4">
                    <button type="submit" class="bg-primary hover:bg-blue-600 text-white px-8 py-3 rounded-xl font-medium transition-all shadow-lg shadow-primary/25 hover:shadow-primary/40 flex items-center gap-2">
                        <span class="material-symbols-outlined">save</span>
                        Güncelle
                    </button>
                    <a href="/Feature/FeatureList/" class="text-slate-400 hover:text-white px-4 py-2 transition-colors">İptal</a>
                </div>
            </div>

            <div class="lg:col-span-1">
                <div class="bg-card-dark p-6 rounded-2xl border border-slate-800 sticky top-24 text-center">
                    <h3 class="text-white font-bold mb-6 border-b border-slate-800 pb-4">Mevcut Resim</h3>
                    <div class="relative inline-block mb-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="w-32 h-32 rounded-full object-cover border-4 border-slate-700 shadow-xl" />
                        }
                        else
                        {
                            <div class="w-32 h-32 rounded-full bg-slate-800 flex items-center justify-center border-4 border-slate-700">
                                <span class="material-symbols-outlined text-4xl text-slate-500">person</span>
                            </div>
                        }
                    </div>
                    <h4 class="text-lg font-bold text-white">@Model.Name</h4>
                    <p class="text-primary text-sm mt-1">@Model.Header</p>
                </div>
            </div>

        </div>
    </form>
</div>

