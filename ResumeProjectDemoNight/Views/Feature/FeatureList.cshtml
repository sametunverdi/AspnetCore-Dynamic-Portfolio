@model List<ResumeProjectDemoNight.Entities.Feature>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">

    <div class="mb-6">
        <h2 class="text-2xl font-bold text-white">Profil Yönetimi (Feature)</h2>
        <p class="text-slate-400 text-sm mt-1">Sitenin girişindeki kişisel bilgilerinizi ve fotoğrafınızı buradan düzenleyebilirsiniz.</p>
    </div>

    <div class="flex flex-col gap-6">

        @foreach (var item in Model)
        {
            <div class="bg-card-dark rounded-2xl border border-slate-800 p-6 flex flex-col md:flex-row items-center gap-6 shadow-xl relative overflow-hidden group">

                <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-primary/10 rounded-full blur-2xl group-hover:bg-primary/20 transition-all duration-500"></div>

                <div class="relative shrink-0">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="w-24 h-24 md:w-32 md:h-32 rounded-full object-cover border-4 border-slate-800 shadow-lg" alt="@item.Name" />
                    }
                    else
                    {
                        <div class="w-24 h-24 md:w-32 md:h-32 rounded-full bg-slate-800 flex items-center justify-center border-4 border-slate-700 text-slate-500">
                            <span class="material-symbols-outlined text-4xl">person</span>
                        </div>
                    }
                    <span class="absolute bottom-0 right-0 bg-black/80 text-white text-[10px] px-2 py-0.5 rounded-full border border-slate-700 font-mono">
                        #@item.FeatureId
                    </span>
                </div>

                <div class="flex-1 text-center md:text-left space-y-2 z-10">
                    <div>
                        <h3 class="text-2xl font-bold text-white">@item.Name</h3>
                        <p class="text-primary font-medium text-sm">@item.Header</p>
                    </div>

                    <div class="flex flex-wrap justify-center md:justify-start gap-2 mt-2">
                        <span class="px-3 py-1 rounded-full bg-slate-800 text-slate-300 text-xs border border-slate-700">
                            @item.Header
                        </span>
                    </div>
                </div>

                <div class="flex items-center gap-3 border-t md:border-t-0 md:border-l border-slate-800 pt-4 md:pt-0 md:pl-6 mt-2 md:mt-0 w-full md:w-auto justify-center">

                    <a href="/Feature/EditFeature/@item.FeatureId"
                       class="flex items-center gap-2 bg-primary hover:bg-blue-600 text-white px-6 py-2.5 rounded-xl transition-all shadow-lg shadow-primary/20 hover:shadow-primary/40 font-medium text-sm">
                        <span class="material-symbols-outlined text-[18px]">edit_square</span>
                        Düzenle
                    </a>

                </div>

            </div>
        }

    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-12">
            <div class="bg-slate-800/50 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="material-symbols-outlined text-3xl text-slate-500">person_off</span>
            </div>
            <h3 class="text-white font-medium">Profil bilgisi bulunamadı</h3>
            <p class="text-slate-500 text-sm mt-2 mb-6">Sistemi başlatmak için ilk kaydı oluşturun.</p>
            <a href="/Feature/AddFeature/" class="bg-primary text-white px-4 py-2 rounded-lg text-sm">
                Profili Oluştur
            </a>
        </div>
    }
</div>

