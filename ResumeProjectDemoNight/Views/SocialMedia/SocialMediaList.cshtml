@using ResumeProjectDemoNight.Entities
@model List<SocialMedia>

@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="p-6">

    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Sosyal Medya</h2>
            <p class="text-slate-400 text-sm mt-1">Profilinizde görünecek sosyal medya bağlantılarını yönetin.</p>
        </div>

        <a href="/SocialMedia/AddSocialMedia/" class="group flex items-center gap-2 bg-primary hover:bg-blue-600 text-white px-5 py-2.5 rounded-xl transition-all duration-200 shadow-lg shadow-primary/20 hover:shadow-primary/40">
            <span class="material-symbols-outlined text-[20px] group-hover:rotate-90 transition-transform">add_link</span>
            <span class="font-medium">Yeni Hesap Ekle</span>
        </a>
    </div>

    <div class="bg-card-dark rounded-2xl border border-slate-800 shadow-xl overflow-hidden">

        <div class="bg-black/20 px-6 py-3 border-b border-slate-800 flex items-center text-xs font-semibold text-slate-500 uppercase tracking-wider">
            <div class="w-1/2">PLATFORM & BAĞLANTI</div>
            <div class="w-1/2 text-right">İŞLEMLER</div>
        </div>

        <div class="divide-y divide-slate-800">

            @foreach (var item in Model)
            {
                <div class="group flex flex-col md:flex-row items-start md:items-center justify-between p-4 hover:bg-white/[0.02] transition-colors duration-200">

                    <div class="flex items-center gap-4 w-full md:w-2/3 overflow-hidden">

                        <div class="shrink-0 w-14 h-14 bg-slate-900 rounded-xl border border-slate-700 flex items-center justify-center group-hover:border-primary/50 group-hover:shadow-[0_0_15px_rgba(25,127,230,0.3)] transition-all duration-300 relative overflow-hidden">
                            <div class="absolute inset-0 bg-primary opacity-0 group-hover:opacity-10 transition-opacity"></div>
                            <i class="@item.IconUrl text-2xl text-slate-400 group-hover:text-primary transition-colors relative z-10"></i>
                        </div>

                        <div class="min-w-0 flex-1">
                            <h3 class="text-lg font-bold text-white mb-0.5 flex items-center gap-2">
                                @item.Name
                                <a href="@item.Url" target="_blank" class="text-slate-500 hover:text-primary transition-colors" title="Linki Aç">
                                    <span class="material-symbols-outlined text-[16px]">open_in_new</span>
                                </a>
                            </h3>
                            <p class="text-slate-500 text-sm truncate font-mono">@item.Url</p>
                        </div>

                    </div>

                    <div class="flex items-center gap-2 mt-4 md:mt-0 w-full md:w-auto justify-end opacity-80 group-hover:opacity-100 transition-opacity">

                        <a href="/SocialMedia/EditSocialMedia/@item.SocialMediaId" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-800 text-slate-300 hover:bg-primary hover:text-white transition-colors text-sm font-medium">
                            <span class="material-symbols-outlined text-[18px]">edit_square</span>
                            <span class="hidden md:inline">Düzenle</span>
                        </a>

                        <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId"
                           onclick="return confirm('@item.Name hesabını silmek istediğinize emin misiniz?');"
                           class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-red-500/10 hover:text-red-500 hover:border-red-500/30 border border-transparent transition-all"
                           title="Sil">
                            <span class="material-symbols-outlined text-[20px]">delete</span>
                        </a>
                    </div>

                </div>
            }

        </div>

        @if (Model.Count == 0)
        {
            <div class="flex flex-col items-center justify-center py-16 text-slate-500">
                <div class="w-16 h-16 bg-slate-800/50 rounded-full flex items-center justify-center mb-4">
                    <span class="material-symbols-outlined text-3xl opacity-50">link_off</span>
                </div>
                <p>Henüz sosyal medya hesabı eklenmemiş.</p>
                <a href="/SocialMedia/AddSocialMedia/" class="text-primary hover:underline text-sm mt-2">İlk hesabı ekle</a>
            </div>
        }

    </div>
</div>
