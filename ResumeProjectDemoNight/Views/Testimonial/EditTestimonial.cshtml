@model ResumeProjectDemoNight.Entities.Testimonial

@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-white">Referansı Güncelle</h2>
        <p class="text-slate-400 text-sm mt-1">Mevcut referans bilgilerini düzenleyin.</p>
    </div>

    <div class="max-w-3xl">
        <form method="post">
            <input type="hidden" asp-for="TestimonialId" />

            <div class="bg-card-dark p-8 rounded-2xl border border-slate-800 shadow-xl">

                <div class="space-y-6">

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Ad Soyad</label>
                            <div class="relative">
                                <span class="absolute left-3 top-3.5 text-slate-500 material-symbols-outlined text-[20px]">person</span>
                                <input type="text" asp-for="NameSurname" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl pl-10 p-3 focus:border-primary focus:ring-1 outline-none transition-all" />
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Ünvan / Şirket</label>
                            <div class="relative">
                                <span class="absolute left-3 top-3.5 text-slate-500 material-symbols-outlined text-[20px]">work</span>
                                <input type="text" asp-for="Title" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl pl-10 p-3 focus:border-primary focus:ring-1 outline-none transition-all" />
                            </div>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Fotoğraf URL</label>
                        <div class="relative">
                            <span class="absolute left-3 top-3.5 text-slate-500 material-symbols-outlined text-[20px]">image</span>
                            <input type="text" asp-for="ImageUrl" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl pl-10 p-3 focus:border-primary focus:ring-1 outline-none transition-all" />
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Yorum</label>
                        <div class="relative">
                            <span class="absolute left-3 top-3.5 text-slate-500 material-symbols-outlined text-[20px]">format_quote</span>
                            <textarea asp-for="Comment" rows="4" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl pl-10 p-3 focus:border-primary focus:ring-1 outline-none transition-all custom-scrollbar leading-relaxed"></textarea>
                        </div>
                    </div>

                </div>

                <div class="flex items-center gap-4 mt-8 pt-6 border-t border-slate-800">
                    <button type="submit" class="bg-primary hover:bg-blue-600 text-white px-8 py-3 rounded-xl font-medium transition-all flex items-center gap-2">
                        <span class="material-symbols-outlined">save</span> Güncelle
                    </button>
                    <a href="/Testimonial/Index/" class="text-slate-400 hover:text-white px-4 py-2 transition-colors">İptal</a>
                </div>

            </div>
        </form>
    </div>
</div>

