@using ResumeProjectDemoNight.Entities
@model Education
@{
    ViewData["Title"] = "CreateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">

    <div class="mb-8">
        <h2 class="text-2xl font-bold text-white">Yeni Eğitim Ekle</h2>
        <p class="text-slate-400 text-sm mt-1">Akademik geçmişinize veya sertifikalarınıza yeni bir kayıt ekleyin.</p>
    </div>

    <div class="max-w-4xl">
        <form method="post">

            <div class="bg-card-dark p-8 rounded-2xl border border-slate-800 shadow-xl relative overflow-hidden">

                <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -mr-20 -mt-20 pointer-events-none"></div>

                <div class="space-y-6 relative z-10">

                    <div class="flex items-center gap-4 mb-6">
                        <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary border border-primary/20">
                            <span class="material-symbols-outlined text-2xl">school</span>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold text-white">Eğitim Detayları</h3>
                            <p class="text-slate-500 text-xs">Lütfen bilgileri eksiksiz doldurunuz.</p>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Okul / Kurum Adı</label>
                            <div class="relative">
                                <span class="absolute left-3 top-3.5 text-slate-500 material-symbols-outlined text-[20px]">apartment</span>
                                <input type="text" asp-for="Title" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl pl-10 p-3 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all placeholder:text-slate-600" placeholder="Örn: İstanbul Teknik Üniversitesi" required autocomplete="off" />
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Tarih Aralığı</label>
                            <div class="relative">
                                <span class="absolute left-3 top-3.5 text-slate-500 material-symbols-outlined text-[20px]">date_range</span>
                                <input type="text" asp-for="WorkPeriodDate" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl pl-10 p-3 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all placeholder:text-slate-600" placeholder="Örn: 2021 - 2025" autocomplete="off" />
                            </div>
                        </div>

                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Bölüm / Açıklama</label>
                        <div class="relative">
                            <span class="absolute left-3 top-3.5 text-slate-500 material-symbols-outlined text-[20px]">description</span>
                            <textarea asp-for="Description" rows="5" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl pl-10 p-3 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all custom-scrollbar placeholder:text-slate-600 leading-relaxed" placeholder="Örn: Bilgisayar Mühendisliği Bölümü, 3.50 GPA ile mezun oldum..."></textarea>
                        </div>
                    </div>

                </div>

                <div class="flex items-center gap-4 mt-8 pt-6 border-t border-slate-800">
                    <button type="submit" class="bg-primary hover:bg-blue-600 text-white px-8 py-3 rounded-xl font-medium transition-all shadow-lg shadow-primary/25 hover:shadow-primary/40 flex items-center gap-2">
                        <span class="material-symbols-outlined">save</span>
                        Kaydet
                    </button>

                    <a href="/Education/EducationList/" class="text-slate-400 hover:text-white px-4 py-2 transition-colors flex items-center gap-2">
                        İptal
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>

