@using ResumeProjectDemoNight.Entities
@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="p-6">
    
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Kategoriler</h2>
            <p class="text-slate-400 text-sm mt-1">Projelerinizi gruplandırdığınız kategori kartları.</p>
        </div>
        
        <a href="/Category/CreateCategory/" class="group flex items-center gap-2 bg-primary hover:bg-blue-600 text-white px-5 py-2.5 rounded-xl transition-all duration-200 shadow-lg shadow-primary/20 hover:shadow-primary/40">
            <span class="material-symbols-outlined text-[20px] group-hover:rotate-90 transition-transform">add</span>
            <span class="font-medium">Yeni Kategori</span>
        </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">

        @foreach (var item in Model)
        {
            <div class="group bg-card-dark rounded-2xl border border-slate-800 p-6 relative overflow-hidden hover:border-primary/50 hover:-translate-y-1 transition-all duration-300 shadow-md hover:shadow-xl hover:shadow-primary/10">
                
                <div class="absolute top-0 right-0 -mt-8 -mr-8 w-32 h-32 bg-primary/5 rounded-full blur-2xl group-hover:bg-primary/10 transition-all duration-500"></div>

                <div class="relative z-10 flex flex-col items-start">
                    <div class="inline-flex items-center justify-center p-4 bg-primary/10 text-primary rounded-xl mb-4 group-hover:scale-110 transition-transform duration-300">
                        <span class="material-symbols-outlined text-3xl">folder_open</span>
                    </div>

                    <h3 class="text-xl font-bold text-white mb-1 line-clamp-1" title="@item.Name">@item.Name</h3>
                    <p class="text-slate-500 text-sm">Proje Grubu</p>
                </div>

                <div class="relative z-10 flex items-center justify-between mt-6 pt-4 border-t border-slate-800/50">
                    <span class="text-xs font-mono text-slate-500 bg-slate-800 px-2 py-1 rounded-md">#@item.CategoryId</span>
                    
                    <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200 translate-y-2 group-hover:translate-y-0">
                        <a href="/Category/UpdateCategory/@item.CategoryId" 
                           class="p-2 rounded-lg bg-slate-800 text-primary hover:bg-primary hover:text-white transition-colors" 
                           title="Düzenle">
                            <span class="material-symbols-outlined text-[18px]">edit_square</span>
                        </a>
                        <a href="/Category/DeleteCategory/@item.CategoryId" 
                           class="p-2 rounded-lg bg-slate-800 text-red-400 hover:bg-red-500 hover:text-white transition-colors" 
                           title="Sil"
                           onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                            <span class="material-symbols-outlined text-[18px]">delete</span>
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>

    @if (Model.Count == 0)
    {
        <div class="p-12 text-center text-slate-500 border-2 border-dashed border-slate-800 rounded-2xl">
            <div class="bg-slate-800/50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="material-symbols-outlined text-4xl opacity-50">create_new_folder</span>
            </div>
            <h3 class="text-white font-medium text-lg">Henüz kategori yok</h3>
            <p class="text-sm mt-2">Projelerinizi düzenlemek için sağ üstten yeni bir kategori ekleyin.</p>
        </div>
    }
</div>

