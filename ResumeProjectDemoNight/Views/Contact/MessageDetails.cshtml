@using ResumeProjectDemoNight.Entities
@model Contact

@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">

    <div class="mb-6">
        <a href="/Contact/ContactList/" class="inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors text-sm font-medium">
            <span class="material-symbols-outlined text-[18px]">arrow_back</span>
            Gelen Kutusuna Dön
        </a>
    </div>

    <div class="bg-card-dark rounded-2xl border border-slate-800 shadow-xl overflow-hidden min-h-[500px] flex flex-col">

        <div class="p-6 md:p-8 border-b border-slate-800 bg-black/10 flex flex-col md:flex-row md:items-center justify-between gap-6">

            <div class="flex items-center gap-4">
                <div class="size-16 rounded-full bg-slate-800 border-2 border-slate-700 flex items-center justify-center text-primary font-bold text-2xl shadow-lg">
                    @if (!string.IsNullOrEmpty(Model.Name))
                    {
                        @Model.Name.Substring(0, 1).ToUpper()
                    }
                </div>

                <div>
                    <h2 class="text-xl font-bold text-white">@Model.Name</h2>
                    <a href="mailto:@Model.Email" class="text-primary hover:text-blue-400 transition-colors text-sm flex items-center gap-1 mt-1">
                        @Model.Email
                        <span class="material-symbols-outlined text-[14px]">open_in_new</span>
                    </a>
                </div>
            </div>

            <div class="text-right">
                <div class="text-white font-medium mb-1">
                    @(((DateTime)Model.Date).ToString("dd MMMM yyyy"))
                </div>
                <div class="text-slate-500 text-xs">
                    Saat: @(((DateTime)Model.Date).ToString("HH:mm"))
                </div>
                <div class="mt-2 inline-block px-2 py-0.5 rounded bg-slate-800 border border-slate-700 text-[10px] text-slate-400 font-mono">
                    Message ID: #@Model.ContactId
                </div>
            </div>
        </div>

        <div class="p-6 md:p-8 flex-1">

            <div class="mb-8">
                <span class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1 block">Konu</span>
                <h3 class="text-2xl font-bold text-white leading-tight">@Model.Subject</h3>
            </div>

            <div class="text-slate-300 leading-relaxed space-y-4 text-base whitespace-pre-wrap">@Model.Message</div>

        </div>

        <div class="p-6 border-t border-slate-800 bg-slate-900/30 flex items-center gap-4">

            <a href="mailto:@Model.Email" class="bg-primary hover:bg-blue-600 text-white px-6 py-2.5 rounded-xl font-medium transition-all shadow-lg shadow-primary/20 flex items-center gap-2">
                <span class="material-symbols-outlined">reply</span>
                Yanıtla
            </a>

            <a href="/Contact/DeleteContact/@Model.ContactId"
               class="bg-slate-800 hover:bg-red-500 hover:text-white text-slate-300 px-6 py-2.5 rounded-xl font-medium transition-all border border-slate-700 hover:border-red-500 flex items-center gap-2"
               onclick="return confirm('Bu mesajı kalıcı olarak silmek istediğinize emin misiniz?');">
                <span class="material-symbols-outlined">delete</span>
                Sil
            </a>

        </div>

    </div>
</div>