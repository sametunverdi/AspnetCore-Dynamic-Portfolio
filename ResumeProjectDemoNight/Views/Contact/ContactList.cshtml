@model List<ResumeProjectDemoNight.Entities.Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">

    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Gelen Kutusu</h2>
            <p class="text-slate-400 text-sm mt-1">İletişim formundan gelen mesajları liste görünümünde inceleyin.</p>
        </div>
        <div class="bg-card-dark border border-slate-800 rounded-lg px-4 py-2 text-sm text-slate-300 shadow-sm">
            <span class="text-primary font-bold">@Model.Count</span> adet mesaj var
        </div>
    </div>

    <div class="bg-card-dark rounded-2xl border border-slate-800 shadow-xl overflow-hidden">

        <div class="bg-black/20 px-6 py-3 border-b border-slate-800 flex items-center text-xs font-semibold text-slate-500 uppercase tracking-wider">
            <div class="w-1/4">GÖNDEREN</div>
            <div class="w-2/4">KONU VE MESAJ</div>
            <div class="w-1/4 text-right">TARİH & İŞLEM</div>
        </div>

        <div class="divide-y divide-slate-800">

            @foreach (var item in Model)
            {
                <div class="group relative flex flex-col md:flex-row items-start md:items-center gap-4 p-5 hover:bg-white/[0.02] transition-colors duration-200 cursor-default">

                    <div class="w-full md:w-1/4 flex items-center gap-4 min-w-0">
                        <div class="shrink-0 size-10 rounded-full bg-slate-800 border border-slate-700 flex items-center justify-center text-primary font-bold text-sm shadow-sm group-hover:border-primary/30 group-hover:text-white group-hover:bg-primary transition-all">
                            @if (!string.IsNullOrEmpty(item.Name))
                            {
                                @item.Name.Substring(0, 1).ToUpper()
                            }
                            else
                            {
                                <span>?</span>
                            }
                        </div>

                        <div class="min-w-0">
                            <h4 class="text-white font-medium text-sm truncate" title="@item.Name">@item.Name</h4>
                            <p class="text-slate-500 text-xs truncate">@item.Email</p>
                        </div>
                    </div>

                    <div class="w-full md:w-2/4 min-w-0 pr-4">
                        <div class="flex items-center gap-2 mb-1">
                            <span class="text-slate-200 text-sm font-semibold truncate">@item.Subject</span>
                        </div>
                        <p class="text-slate-400 text-sm line-clamp-1 group-hover:text-slate-300 transition-colors">
                            <span class="text-slate-600 mr-1">-</span> @item.Message
                        </p>
                    </div>

                    <div class="w-full md:w-1/4 flex items-center justify-between md:justify-end gap-4 mt-2 md:mt-0">

                        <span class="text-xs font-mono text-slate-500 whitespace-nowrap">
                            @(((DateTime)item.Date).ToString("dd MMM yyyy"))
                        </span>

                        <div class="flex items-center gap-2 opacity-100 md:opacity-0 md:group-hover:opacity-100 transition-opacity">

                            <a href="/Contact/MessageDetails/@item.ContactId"
                               class="size-8 rounded-lg flex items-center justify-center text-slate-400 hover:text-primary hover:bg-primary/10 transition-colors"
                               title="Mesajı Oku">
                                <span class="material-symbols-outlined text-[18px]">visibility</span>
                            </a>

                            <a href="mailto:@item.Email"
                               class="size-8 rounded-lg flex items-center justify-center text-slate-400 hover:text-white hover:bg-slate-700 transition-colors"
                               title="Yanıtla">
                                <span class="material-symbols-outlined text-[18px]">reply</span>
                            </a>

                            <a href="/Contact/DeleteContact/@item.ContactId"
                               class="size-8 rounded-lg flex items-center justify-center text-slate-400 hover:text-red-400 hover:bg-red-500/10 transition-colors"
                               onclick="return confirm('Mesajı silmek istediğinize emin misiniz?');"
                               title="Sil">
                                <span class="material-symbols-outlined text-[18px]">delete</span>
                            </a>

                        </div>
                    </div>

                </div>
            }

        </div>

        @if (Model.Count == 0)
        {
            <div class="flex flex-col items-center justify-center py-16 text-slate-500">
                <span class="material-symbols-outlined text-5xl opacity-20 mb-4">inbox</span>
                <p>Gelen kutunuz boş.</p>
            </div>
        }

    </div>
</div>