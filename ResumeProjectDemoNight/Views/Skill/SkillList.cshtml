@using ResumeProjectDemoNight.Entities
@model List<Skill>
@{
    ViewData["Title"] = "SkillList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="p-6">

    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Yeteneklerim</h2>
            <p class="text-slate-400 text-sm mt-1">Yazılım ve teknik becerilerinizin yetkinlik seviyelerini yönetin.</p>
        </div>

        <a href="/Skill/CreateSkill/" class="group flex items-center gap-2 bg-primary hover:bg-blue-600 text-white px-5 py-2.5 rounded-xl transition-all duration-200 shadow-lg shadow-primary/20 hover:shadow-primary/40">
            <span class="material-symbols-outlined text-[20px] group-hover:rotate-90 transition-transform">add</span>
            <span class="font-medium">Yeni Yetenek Ekle</span>
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        @foreach (var item in Model)
        {
            <div class="bg-card-dark rounded-2xl border border-slate-800 p-6 relative hover:border-primary/50 transition-all duration-300 shadow-lg group">

                <div class="flex justify-between items-end mb-4">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-lg bg-slate-800 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-white transition-colors">
                            <span class="material-symbols-outlined">code_blocks</span>
                        </div>
                        <h3 class="text-lg font-bold text-white">@item.Title</h3>
                    </div>
                    <span class="text-2xl font-bold text-slate-500 group-hover:text-primary transition-colors">@item.Value%</span>
                </div>

                <div class="w-full bg-slate-800 rounded-full h-3 mb-6 overflow-hidden border border-slate-700">
                    <div class="bg-gradient-to-r from-primary to-blue-400 h-3 rounded-full transition-all duration-1000 ease-out relative" style="width: @item.Value%">
                        <div class="absolute top-0 right-0 bottom-0 w-1 bg-white/50 blur-[2px]"></div>
                    </div>
                </div>

                <div class="flex items-center justify-between border-t border-slate-800 pt-4">
                    <span class="text-[10px] text-slate-600 font-mono">ID: #@item.SkillId</span>

                    <div class="flex gap-2 opacity-60 group-hover:opacity-100 transition-opacity">
                        <a href="/Skill/UpdateSkill/@item.SkillId" class="hover:text-primary text-slate-400 transition-colors p-1" title="Düzenle">
                            <span class="material-symbols-outlined text-[20px]">edit</span>
                        </a>
                        <a href="/Skill/DeleteSkill/@item.SkillId"
                           class="hover:text-red-500 text-slate-400 transition-colors p-1"
                           onclick="return confirm('Silmek istediğinize emin misiniz?');"
                           title="Sil">
                            <span class="material-symbols-outlined text-[20px]">delete</span>
                        </a>
                    </div>
                </div>

            </div>
        }

    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-20 text-slate-500 bg-card-dark/50 rounded-2xl border border-dashed border-slate-800 mt-6">
            <p>Henüz yetenek eklenmemiş.</p>
        </div>
    }

</div>

