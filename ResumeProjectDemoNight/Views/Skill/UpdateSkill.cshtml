@model ResumeProjectDemoNight.Entities.Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="p-6">
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-white">Yeteneği Güncelle</h2>
        <p class="text-slate-400 text-sm mt-1">Mevcut yetenek bilgisini düzenleyin.</p>
    </div>

    <div class="max-w-xl">
        <form method="post">
            <input type="hidden" asp-for="SkillId" />

            <div class="bg-card-dark p-8 rounded-2xl border border-slate-800 shadow-xl">

                <div class="space-y-6">

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Yetenek Adı (Title)</label>
                        <div class="relative">
                            <span class="absolute left-3 top-3.5 text-slate-500 material-symbols-outlined text-[20px]">edit</span>
                            <input type="text" asp-for="Title" class="w-full bg-slate-800 border border-slate-700 text-white rounded-xl pl-10 p-3 focus:border-primary focus:ring-1 outline-none transition-all" />
                        </div>
                    </div>

                    <div>
                        <div class="flex justify-between mb-2">
                            <label class="block text-sm font-medium text-slate-400">Yetkinlik Seviyesi (%)</label>
                            <span class="text-primary font-bold" id="rangeValueDisplay">@Model.Value%</span>
                        </div>

                        <div class="flex items-center gap-4">
                            <input type="range" min="0" max="100" value="@Model.Value" class="w-full h-2 bg-slate-700 rounded-lg appearance-none cursor-pointer accent-primary" oninput="updateSync(this.value)" />

                            <input type="number" asp-for="Value" id="numberInput" min="0" max="100" class="w-20 bg-slate-800 border border-slate-700 text-white text-center rounded-xl p-2 focus:border-primary outline-none font-bold" />
                        </div>
                    </div>

                </div>

                <div class="flex items-center gap-4 mt-8 pt-6 border-t border-slate-800">
                    <button type="submit" class="bg-primary hover:bg-blue-600 text-white px-8 py-3 rounded-xl font-medium transition-all flex items-center gap-2">
                        <span class="material-symbols-outlined">save</span> Güncelle
                    </button>
                    <a href="/Skill/SkillList/" class="text-slate-400 hover:text-white px-4 py-2 transition-colors">İptal</a>
                </div>

            </div>
        </form>
    </div>
</div>

<script>
    function updateSync(val) {
        document.querySelector('input[type="range"]').value = val;
        document.getElementById('numberInput').value = val;
        document.getElementById('rangeValueDisplay').innerText = val + '%';
    }
</script>
