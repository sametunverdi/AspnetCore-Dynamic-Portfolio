@model ResumeProjectDemoNight.Entities.Message

@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="max-w-4xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-semibold text-white">Mesaj İçeriği</h2>
            <p class="text-gray-400 text-sm mt-1">Gönderilen mesajın tüm detaylarını buradan inceleyebilirsiniz.</p>
        </div>
        <a href="/Message/MessageList/" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors text-sm font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Listeye Dön
        </a>
    </div>

    <div class="bg-gray-900 rounded-lg p-8 shadow-lg border border-gray-800">

        <div class="flex flex-col md:flex-row md:items-center justify-between border-b border-gray-800 pb-6 mb-6 gap-4">
            <div class="flex items-center gap-4">
                <div class="w-16 h-16 rounded-full bg-gray-800 flex items-center justify-center text-blue-400 text-2xl font-bold border border-gray-700">
                    @if (!string.IsNullOrEmpty(Model.NameSurname))
                    {
                        @Model.NameSurname.Substring(0, 1).ToUpper()
                    }
                </div>
                <div>
                    <h3 class="text-xl font-bold text-white">@Model.NameSurname</h3>
                    <a href="mailto:@Model.Email" class="text-blue-400 text-sm hover:underline flex items-center gap-1 mt-1">
                        @Model.Email
                    </a>
                </div>
            </div>

            <div class="text-right">
                <div class="text-white font-medium">@Model.SendDate.ToString("dd MMMM yyyy")</div>
                <div class="text-gray-500 text-sm">@Model.SendDate.ToString("HH:mm")</div>
                <div class="mt-2 inline-block px-3 py-1 rounded-full text-xs font-semibold bg-gray-800 text-gray-300 border border-gray-700">
                    ID: #@Model.MessageId
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <div>
                <label class="text-xs font-bold text-gray-500 uppercase tracking-wider block mb-2">Konu</label>
                <h4 class="text-xl font-semibold text-white">@Model.Subject</h4>
            </div>

            <div class="bg-gray-800/50 p-6 rounded-lg border border-gray-800">
                <label class="text-xs font-bold text-gray-500 uppercase tracking-wider block mb-4 border-b border-gray-700 pb-2">Mesaj İçeriği</label>
                <p class="text-gray-300 leading-relaxed whitespace-pre-line text-base">
                    @Model.MessageDetail
                </p>
            </div>
        </div>

        <div class="flex justify-end gap-3 mt-8 pt-6 border-t border-gray-800">
            <a href="mailto:@Model.Email" class="flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg transition-colors font-medium">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Yanıtla
            </a>

            <a href="/Message/Delete/@Model.MessageId"
               class="flex items-center gap-2 bg-gray-800 hover:bg-red-900/30 hover:text-red-400 text-gray-300 px-5 py-2.5 rounded-lg transition-colors border border-gray-700 hover:border-red-800"
               onclick="return confirm('Bu mesajı kalıcı olarak silmek istediğinize emin misiniz?')">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Sil
            </a>
        </div>

    </div>
</div>